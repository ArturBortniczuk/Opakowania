# .env.example
# Skopiuj ten plik jako .env.local i uzupełnij własnymi wartościami

# Konfiguracja aplikacji
REACT_APP_VERSION=1.0.0
REACT_APP_ENVIRONMENT=development
REACT_APP_APP_NAME="Grupa Eltron - System Zarządzania Bębnami"

# API Configuration
REACT_APP_API_URL=http://localhost:3001
REACT_APP_API_TIMEOUT=10000

# Database (dla przyszłej integracji z Neon)
DATABASE_URL=postgresql://username:password@hostname:port/database?sslmode=require

# Konfiguracja bezpieczeństwa
REACT_APP_ENCRYPTION_KEY=your-secret-encryption-key-here
REACT_APP_SESSION_TIMEOUT=3600000

# Email (dla przyszłej integracji)
EMAIL_SERVICE_API_KEY=your-email-service-api-key
EMAIL_FROM=noreply@eltron.pl
EMAIL_ADMIN=admin@eltron.pl

# Analityka (opcjonalne)
REACT_APP_ANALYTICS_ID=your-analytics-id
REACT_APP_SENTRY_DSN=your-sentry-dsn

# Feature flags
REACT_APP_ENABLE_DEBUG=false
REACT_APP_ENABLE_MOCK_DATA=true
REACT_APP_ENABLE_OFFLINE_MODE=false

# Lokalizacja
REACT_APP_DEFAULT_LOCALE=pl-PL
REACT_APP_TIMEZONE=Europe/Warsaw

# Upload limits
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Cache settings
REACT_APP_CACHE_TIMEOUT=300000
REACT_APP_OFFLINE_CACHE_SIZE=50

# Company settings
REACT_APP_COMPANY_NAME="Grupa Eltron"
REACT_APP_COMPANY_WEBSITE=https://eltron.pl
REACT_APP_SUPPORT_EMAIL=support@eltron.pl
REACT_APP_SUPPORT_PHONE="+48 123 456 789"

# Deployment
VERCEL_URL=your-app.vercel.app
VERCEL_ENV=production